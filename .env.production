# Production Environment Configuration
ENVIRONMENT=production

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgresql://trading_user:your_secure_postgres_password_here@localhost:5432/trading_platform

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:your_secure_redis_password_here@localhost:6379/0

# JWT Configuration
SECRET_KEY=your_very_long_and_secure_secret_key_here_minimum_32_characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Exchange API Keys (Testnet for production safety)
BINANCE_API_KEY=your_binance_testnet_api_key
BINANCE_SECRET_KEY=your_binance_testnet_secret_key
BYBIT_API_KEY=your_bybit_testnet_api_key
BYBIT_SECRET_KEY=your_bybit_testnet_secret_key

# CORS Configuration
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Frontend Configuration
REACT_APP_API_URL=https://api.yourdomain.com
REACT_APP_ENVIRONMENT=production

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs

# Monitoring Configuration
GRAFANA_PASSWORD=your_secure_grafana_password_here

# Security Configuration
ENABLE_HTTPS=true
SSL_CERT_PATH=./docker/ssl/cert.pem
SSL_KEY_PATH=./docker/ssl/key.pem

# Performance Configuration
WORKER_PROCESSES=4
MAX_CONNECTIONS=1000
TIMEOUT=30

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Alert Configuration
ALERT_EMAIL=alerts@yourdomain.com
ALERT_WEBHOOK_URL=https://hooks.slack.com/your_webhook_url

# Trading Configuration
PAPER_TRADING_DEFAULT=true
LIVE_TRADING_ENABLED=false
MAX_DAILY_TRADES=50
MAX_DAILY_VOLUME=100000
DEFAULT_STOP_LOSS_PERCENT=5.0
DEFAULT_TAKE_PROFIT_PERCENT=10.0

# Risk Management Configuration
DAILY_LOSS_LIMIT=1000
WEEKLY_LOSS_LIMIT=5000
MONTHLY_LOSS_LIMIT=20000
TOTAL_LOSS_LIMIT=50000
MAX_POSITION_SIZE=10000
MAX_POSITIONS=10
MAX_LEVERAGE=1.0

# Strategy Configuration
STRATEGY_EXECUTION_INTERVAL=60  # seconds
STRATEGY_MAX_RUNTIME=3600  # seconds
STRATEGY_MEMORY_LIMIT=512  # MB

# Exchange Configuration
EXCHANGE_TIMEOUT=30
EXCHANGE_RETRY_ATTEMPTS=3
EXCHANGE_RATE_LIMIT_DELAY=1  # seconds

# WebSocket Configuration
WEBSOCKET_PING_INTERVAL=30
WEBSOCKET_PONG_TIMEOUT=10
WEBSOCKET_MAX_RECONNECT_ATTEMPTS=5

# Cache Configuration
CACHE_TTL=300  # seconds
CACHE_MAX_SIZE=1000
CACHE_CLEANUP_INTERVAL=3600  # seconds

# Database Connection Pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Redis Connection Pool
REDIS_POOL_SIZE=10
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=8001
METRICS_PATH=/metrics

# Profiling Configuration
PROFILING_ENABLED=false
PROFILING_PORT=8002
PROFILING_PATH=/profiling